call pathogen#infect()
call pathogen#helptags()
syntax on
filetype plugin indent on


set nocompatible
set ruler         " show the cursor all the time
set number

set nowrap
set tabstop=2
set shiftwidth=2
set expandtab

" TODO: more discreet
set list listchars=tab:»·,trail:·,precedes:<,extends:>


set colorcolumn=80

set visualbell

set encoding=utf-8

set mouse=a

set backupdir=~/.vim/backup
set directory=~/.vim/backup